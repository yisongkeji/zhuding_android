<?xml version="1.0" encoding="utf-8"?>
<com.gcssloop.widget.RCRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_rl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="10dp"
    app:round_corner_bottom_right="25dp"
    app:round_corner_top_right="20dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/icon_dayask_06" />

    <!--<com.foreseers.chat.view.widget.SliderImageView-->
    <!--android:id="@+id/item_slide_rv_list_slide"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:visibility="visible">-->

    <ImageView
        android:id="@+id/animation_iv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/icon_dayask_07"
        android:visibility="gone" />

    <!--</com.foreseers.chat.view.widget.SliderImageView>-->


    <ImageView
        android:id="@+id/question_iv"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:src="@mipmap/icon_dayask_01" />

    <TextView
        android:id="@+id/question_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/question_iv"
        android:textColor="@color/black_deep"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/question_answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/question_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/question_iv"
        android:visibility="gone" />

    <!--android:background="@color/white"-->
    <!--android:paddingBottom="3dp"-->
    <ImageView
        android:id="@+id/open_answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"

        android:src="@mipmap/icon_dayask_08" />
</com.gcssloop.widget.RCRelativeLayout>
