<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/colorWhite"
    app:cardCornerRadius="20dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@mipmap/icon_header_case_03"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/sp_16"
                android:elevation="1px"
                android:text="@string/foreseers_expand_friends"
                android:textColor="@color/colorBlack"
                android:textSize="25sp" />

            <com.ms.banner.Banner
                android:id="@+id/banner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="20dp"
                app:indicator_drawable_selected="@color/colorBlack"
                app:indicator_drawable_unselected="@color/colorGray2"
                app:indicator_margin="30dp" />

        </LinearLayout>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginTop="-15dp">

            <TextView
                android:layout_width="45dp"
                android:layout_height="15dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_vip"
                android:elevation="3dp"
                android:gravity="center"
                android:text="@string/foreseers_discount"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/sp_11" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="111dp"
                    android:layout_marginLeft="9dp"
                    android:layout_marginTop="9dp"
                    android:layout_marginRight="9dp"
                    android:background="@drawable/background_vip"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:id="@+id/layout_vip1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/text_day1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="360"
                                android:textColor="@color/colorBlack"
                                android:textSize="@dimen/sp_26" />

                            <TextView
                                android:id="@+id/text_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/foreseers_day"
                                android:textColor="@color/colorBlack"
                                android:textSize="@dimen/sp_10" />
                        </LinearLayout>


                        <TextView
                            android:id="@+id/text_price360"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/colorGray" />

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/layout_vip2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/background_vip2"
                        android:gravity="center"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/text_day2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="90"
                                android:textColor="@color/colorAccent"
                                android:textSize="@dimen/sp_26" />

                            <TextView
                                android:id="@+id/text_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/foreseers_day"
                                android:textColor="@color/colorBlack"
                                android:textSize="@dimen/sp_10" />
                        </LinearLayout>


                        <TextView
                            android:id="@+id/text_price90"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/colorAccent" />
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/layout_vip3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/text_day3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="30"
                                android:textColor="@color/colorBlack"
                                android:textSize="@dimen/sp_26" />

                            <TextView
                                android:id="@+id/text_3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/foreseers_day"
                                android:textColor="@color/colorBlack"
                                android:textSize="@dimen/sp_10" />
                        </LinearLayout>


                        <TextView
                            android:id="@+id/text_price30"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/colorGray" />
                    </LinearLayout>


                </LinearLayout>

                <Button
                    android:id="@+id/button_vip"
                    android:layout_width="match_parent"
                    android:layout_height="39dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/button_vip"
                    android:text="@string/foreseers_expand_friends"
                    android:textColor="@color/colorWhite"
                    android:textSize="25sp" />

            </LinearLayout>

        </FrameLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
