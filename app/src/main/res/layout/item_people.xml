<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/layout_item_people"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <FrameLayout
        android:id="@+id/item_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/icon_header_gradient_02">


        <com.ruffian.library.widget.RImageView
            android:id="@+id/image_people"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            app:corner_radius="15px"
            app:icon_src_normal="@mipmap/icon_avatar_02" />


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:alpha="0.44"
            android:background="@drawable/rounded_bottom_layout">

            <!--<View-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="match_parent"-->
                <!--android:alpha="0.44"-->
                <!--android:background="@drawable/rounded_bottom_layout" />-->

            <ImageView
                android:id="@+id/item_recommend_img"
                android:layout_width="78dp"
                android:layout_height="67dp"
                android:layout_gravity="bottom|right"
                android:background="@mipmap/icon_popular_01"
                android:visibility="visible" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="3dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_people_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="name"
                    android:textColor="@color/colorBlack"
                    android:textSize="23sp" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorBlack" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/text_people_sex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="sex"
                        android:textColor="@color/colorBlack"
                        android:textSize="19sp" />

                    <TextView
                        android:id="@+id/text_people_age"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:text="age"
                        android:textColor="@color/colorBlack"
                        android:textSize="19sp" />

                    <TextView
                        android:id="@+id/text_people_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:text="location"
                        android:textColor="@color/colorBlack"
                        android:textSize="19sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/text_people_progress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="progress"
                    android:textColor="@color/colorBlack"
                    android:textSize="18sp" />
            </LinearLayout>

        </FrameLayout>

    </FrameLayout>


</FrameLayout>
